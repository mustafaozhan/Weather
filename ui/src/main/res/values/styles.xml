<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="hintTextColor">@color/color_text_weak</item>
        <item name="android:buttonTint">@color/color_accent</item>
        <item name="android:itemBackground">@color/color_background_weak</item>
        <item name="android:editTextColor">@color/color_text</item>
        <item name="android:textColorHint">@color/color_text_weak</item>
        <item name="android:tint">@color/color_transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
        <item name="android:navigationBarColor">@color/color_background_strong</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.WindowTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/color_text</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Fullscreen.SplashTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
    </style>

    <style name="CityNameStyle">
        <item name="android:background">@color/color_background_strong</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_size_city_name</item>
        <item name="android:padding">@dimen/padding_city_name</item>
    </style>

    <style name="ForecastItemStyle">
        <item name="android:background">@drawable/selector_item</item>
        <item name="android:padding">@dimen/padding_forecast</item>
    </style>

    <style name="ForecastItemTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_size_forecast_item_text</item>
        <item name="android:padding">@dimen/padding_forecast_item_text</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:text">@string/txt_forecast</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="SearchViewStyle">
        <item name="android:maxWidth">@dimen/max_width_search_view</item>
        <item name="queryHint">@string/txt_search</item>
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchHintIcon">@drawable/ic_search_hint</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:paddingTop">@dimen/progress_bar_margin_top</item>
        <item name="android:layout_width">@dimen/progress_bar_height_width</item>
        <item name="android:layout_height">@dimen/progress_bar_height_width</item>
    </style>

    <style name="DetailTextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_size_detail</item>
        <item name="android:padding">@dimen/padding_detail</item>
    </style>

    <style name="BarTitleStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:text">@string/txt_history</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_history</item>
        <item name="android:background">@color/color_background_strong</item>
    </style>

</resources>
